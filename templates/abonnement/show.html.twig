{% extends 'base.html.twig' %}

{% block title %}Détails de l'abonnement{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
                <h1 class="text-2xl font-semibold text-gray-800">Détails de l'abonnement</h1>
            </div>
            <div class="border-t border-gray-200">
                <dl>
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Id</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2">{{ abonnement.id }}</dd>
                    </div>
                    <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Nom</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2">{{ abonnement.nom }}</dd>
                    </div>
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Prix</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2">{{ abonnement.prix }}</dd>
                    </div>
                    <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Description</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2">{{ abonnement.description }}</dd>
                    </div>
                   
                </dl>
            </div>
            <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                    <a href="{{ path('app_abonnement_index') }}" class="inline-block text-sm px-4 py-2 leading-none border rounded-lg text-primary border-primary hover:border-transparent hover:text-white hover:bg-primary mt-4 lg:mt-0">Retour à la liste</a>
               
                <a href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}" class="inline-block ml-2 text-sm px-4 py-2 leading-none border rounded-lg text-secondary border-secondary hover:border-transparent hover:text-white hover:bg-secondary mt-4 lg:mt-0">Modifier</a>
            </div>
        </div>

        {{ include('abonnement/_delete_form.html.twig') }}
    </div>

{% endblock %}
