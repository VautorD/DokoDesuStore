{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <div class="flex">
            {% include "_partieAdmin/_adminbarre.html.twig" %}

            <main class="flex-1 border border-gray-200 bg-white p-4">
                <h1 class="text-xl font-bold mb-4">Liste des utilisateurs</h1>

                <div class="overflow-x-auto">
                    <table class="min-w-full table-auto">
                        <thead>
                            <tr class="bg-gray-200 text-gray-600">
                                <th class="py-2 px-4">ID</th>
                                <th class="py-2 px-4">Email</th>
                                <th class="py-2 px-4">Nom</th>
                                <th class="py-2 px-4">Prénom</th>
                                <th class="py-2 px-4">Téléphone</th>
                                <th class="py-2 px-4">Rôles</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr class="border-b border-gray-200">
                                    <td class="py-2 px-4">{{ user.getId() }}</td>
                                    <td class="py-2 px-4">{{ user.getEmail() }}</td>
                                    <td class="py-2 px-4">{{ user.getNom() }}</td>
                                    <td class="py-2 px-4">{{ user.getPrenom() }}</td>
                                    <td class="py-2 px-4">{{ user.getTel() }}</td>
                                    <td class="py-2 px-4">{{ user.getRoles()|join(', ') }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="py-4 text-center">Aucun utilisateur trouvé</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>
{% endblock %}
