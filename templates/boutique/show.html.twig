{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
    <h1>Boutique</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ boutique.nom }}</td>
            </tr>
            <tr>
                <th>Num_siret</th>
                <td>{{ boutique.numSiret }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ boutique.adresse }}</td>
            </tr>
            <tr>
                <th>Cp</th>
                <td>{{ boutique.cp }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ boutique.ville }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ boutique.img }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ boutique.tel }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a href="{{ path('app_boutique_index') }}">Retour à la liste</a>
    {% elseif is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_professionnel') }}">retour à ma boutique</a>
    {% endif %}

    <a href="{{ path('app_boutique_edit', {'id': boutique.id}) }}">edit</a>

    {{ include('boutique/_delete_form.html.twig') }}
{% endblock %}
