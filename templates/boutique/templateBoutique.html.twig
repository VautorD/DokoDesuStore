{% extends 'base.html.twig' %}

{% block title %}{{boutique.nom}}{% endblock %}

{% block banniere %}
	<div
		class="w-full h-[400px] bg-cover bg-center" style="background-image: url('/img/banniere-fiche-categorie.webp');">
	</div>
{% endblock %}

{% block breadcrumb %}
	<div class="container px-4 py-4">
		<nav class="flex" aria-label="Breadcrumb">
			<ol class="inline-flex items-center space-x-1 md:space-x-3">
				<li class="inline-flex items-center">
					<a href="#" class="text-gray-700 hover:text-gray-900 inline-flex items-center">
						<svg class="w-5 h-5 mr-2.5" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path d="M10 1.993L1 10l9 8.007 9-8.007-9-8.007zm0 2.243L17.385 10 10 16.764 2.615 10 10 4.236z"></path>
						</svg>
						Home
					</a>
				</li>
				<li>
					<div class="flex items-center">
						<svg class="w-6 h-6 text-gray-400" fill="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M9.707 12l4.647-4.646a.5.5 0 0 0-.708-.708l-5 5a.5.5 0 0 0 0 .708l5 5a.5.5 0 0 0 .708-.708L9.707 12z"></path>
						</svg>
						<a href="#" class="ml-1 text-gray-700 hover:text-gray-900 md:ml-2">Category</a>
					</div>
				</li>
				<li>
					<div class="flex items-center">
						<svg class="w-6 h-6 text-gray-400" fill="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M9.707 12l4.647-4.646a.5.5 0 0 0-.708-.708l-5 5a.5.5 0 0 0 0 .708l5 5a.5.5 0 0 0 .708-.708L9.707 12z"></path>
						</svg>
						<span class="ml-1 text-gray-500 md:ml-2" aria-current="page">Current Page</span>
					</div>
				</li>
			</ol>
		</nav>
	</div>
{% endblock %}


{% block body %}
	<div
		class="container mx-auto px-4 py-4">
		<div class="flex justify-center space-x-1 mb-8">
			<img src="/img/coolJapan-boutique.jpg" alt="Photo 1" class="h-40 object-cover">
			<img src="/img/coolJapan-boutique.jpg" alt="Photo 2" class="h-40 object-cover">
			<img src="/img/coolJapan-boutique.jpg" alt="Photo 3" class="h-40 object-cover">
			<img src="/img/coolJapan-boutique.jpg" alt="Photo 4" class="h-40 object-cover">
			<img src="/img/coolJapan-boutique.jpg" alt="Photo 5" class="h-40 object-cover">
		</div>

		<div
			class="flex flex-col lg:flex-row lg:space-x-8 mb-8">
			<div class="flex-shrink-0 w-full lg:w-1/3 mb-4 lg:mb-0">
				<img src="{{ asset('img/' ~ boutique.img) }}" alt="Le logo de {{boutique.nom}}" class="w-full h-[315px] object-cover">
			</div>

			
			<div class="bg-white shadow-md p-6 w-full lg:w-2/3 flex flex-col justify-between">
				<div class="flex justify-between">
					<div>
						<h2 class="text-xl font-semibold mb-2">{{boutique.nom}}</h2>
						<p class="text-gray-700 mb-1">{{boutique.adresse}}</p>
						<p class="text-gray-700 mb-1">{{boutique.cp}}, {{boutique.ville}}</p>
						<p class="text-gray-700">{{boutique.nom}}</p>
					</div>
					<div>
						<img src="/img/logoCoolJapan-boutique.png" alt="Small Image" class="w-128 h-[124px] object-cover">
					</div>
				</div>
				<div class="mt-4">
					<p class="text-gray-600">Court texte sous les informations.</p>
				</div>
			</div>
		</div>
	</div>

	<div class="py-5 mt-auto bg-vert">
		<div class="container mx-auto px-4 text-center">
			<h2 class="text-3xl font-semibold mb-4">Tous les produits de cette boutique</h2>
			<div class="flex justify-center">
				{% for produit in boutique.produits %}
					<div class="bg-white shadow-md p-4 w-64">
						<img src="{{ asset('build/img/' ~ produit.img) }}" alt="Image du produit {{ produit.nom }}" class="w-full h-36 object-cover">
						<div class="py-4">
							<div class="flex">
								<div>
									<h3 class="text-lg font-semibold mb-2">{{ produit.nom }}</h3>
								</div>
							</div>
							<div class="flex-end">
								<p class="text-gray-700">{{ produit.prix }}</p>
							</div>
							<button class="bg-secondary text-white px-4 py-2 rounded-lg mt-4">
                                 <a href="{{ path('app_produit_details', {'slug': produit.slug}) }}">Je d√©couvre</a>
                            </button>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>
{% endblock %}
