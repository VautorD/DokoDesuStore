{% extends 'base.html.twig' %}

{% block title %}
    {{ boutique.nom }}
{% endblock %}

{% block body %}
    <div class="w-full h-[400px] bg-cover bg-center" style="background-image: url('/img/banniere-fiche-categorie.webp');"></div>
    <div class="container mx-auto px-12 py-12 mt-12">
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-1 mb-8">
            <img src="{{ asset('img/' ~ boutique.img) }}" alt="Photo 1" class="h-40 object-cover w-full">
            <img src="{{ asset('img/' ~ boutique.img) }}" alt="Photo 2" class="h-40 object-cover w-full">
            <img src="{{ asset('img/' ~ boutique.img) }}" alt="Photo 3" class="h-40 object-cover w-full">
            <img src="{{ asset('img/' ~ boutique.img) }}" alt="Photo 4" class="h-40 object-cover w-full">
            <img src="{{ asset('img/' ~ boutique.img) }}" alt="Photo 5" class="h-40 object-cover w-full">
        </div>

        <div class="flex flex-col lg:flex-row lg:space-x-8 mb-8">
            <div class="flex-shrink-0 w-full lg:w-1/3 mb-4 lg:mb-0">
                <img src="{{ asset('img/' ~ boutique.img) }}" alt="Le logo de {{ boutique.nom }}" class="w-full h-[315px] object-cover">
            </div>

            <div class="bg-white border border-gray-200 p-6 w-full lg:w-2/3 flex flex-col justify-between">
                <div class="flex justify-between">
                    <div>
                        <h2 class="text-3xl font-semibold mb-12">{{ boutique.nom }}</h2>
                        <p class="text-gray-700 text-xl mb-1">{{ boutique.adresse }}</p>
                        <p class="text-gray-700 text-xl mb-1">{{ boutique.cp }}, {{ boutique.ville }}</p>
                    </div>
                    <div></div>
                    <div>
                        <img src="/img/logoCoolJapan-boutique.png" alt="Small Image" class="w-128 h-[124px] object-cover">
                    </div>
                </div>
                <div class="mt-4">
                    <p class="text-gray-600 text-xl">{{ boutique.description }}</p>
                </div>
            </div>
        </div>

        <div id="map" class="w-full h-[400px] mb-8"></div>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Construction de l'adresse complète pour la requête de géocodage
                var address = "{{ boutique.adresse }}, {{ boutique.cp }}, {{ boutique.ville }}";
                var url = `https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(address)}`;

                // Faire la requête à l'API de Nominatim
                fetch(url)
                    .then(response => response.json())
                    .then(data => {
                        if (data.length > 0) {
                            var latitude = data[0].lat;
                            var longitude = data[0].lon;

                            // Initialiser la carte avec les coordonnées obtenues
                            var map = L.map('map').setView([latitude, longitude], 13);

                            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                            }).addTo(map);

                            L.marker([latitude, longitude]).addTo(map)
                                .bindPopup('{{ boutique.nom }}<br>{{ boutique.adresse }}<br>{{ boutique.cp }}, {{ boutique.ville }}')
                                .openPopup();
                        } else {
                            console.error('Adresse introuvable');
                        }
                    })
                    .catch(error => console.error('Erreur lors de la requête de géocodage :', error));
            });
        </script>
    </div>

    <div class="py-5 mt-auto bg-vert">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-3xl font-semibold mb-12 mt-12">Tous les produits de cette boutique</h2>
            <div class="flex justify-center">
                {% for produit in boutique.produits %}
                    <div class="bg-white shadow-md w-64">
                        <img src="{{ asset('/img/' ~ produit.img) }}" alt="Image du produit {{ produit.nom }}" class="w-full h-36 object-cover">
                        <div class="py-4">
                            <div>
                                <h3 class="text-start text-lg font-semibold pl-6">{{ produit.nom }}</h3>
                                <p class="text-end text-xl pr-6 text-gray-700">{{ produit.prix }} €</p>
                            </div>
                            <button class="btn btn-lg btn-primary py-2 px-4 mt-4 rounded bg-secondary text-center text-white hover:bg-white hover:text-secondary border border-transparent hover:border-secondary transition duration-300">
                                <a href="{{ path('app_produit_details', {'slug': produit.slug}) }}">Voir plus</a>
                            </button>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
