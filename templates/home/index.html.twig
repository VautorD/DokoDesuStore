{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div class="relative h-[540px] bg-cover bg-center mb-8" style="background-image: url('img/homeBanniere.jpeg');">
		<div class="absolute inset-0 flex items-center justify-center">
			<div class="bg-[#F7F8FA]/80 backdrop-blur-md h-auto w-full max-w-4xl mx-4 p-6 rounded-lg flex flex-col items-center justify-center text-center">
				<img src="img/iconeFleur.png" alt="Icône Fleur" class="h-20 w-19 mb-4">
				<h1 class="text-4xl font-bold mb-6 max-w-[450px] leading-normal">Vos boutiques préférées en un clic !</h1>
				<h2 class="text-xl mb-6 max-w-[520px] leading-normal">Retrouvez les boutiques physiques de la culture japonaise proches de chez vous.</h2>
				<a href="{{ path('app_boutique_all') }}" class="btn btn-lg btn-primary w-[300px] py-2 px-4 mb-6 rounded bg-secondary text-white hover:bg-[#F7F8FA]/80 hover:text-secondary border border-transparent hover:border-secondary transition duration-300">Découvrir les boutiques</a>
			</div>
		</div>
	</div>

	{# Meilleurs ventes #}
	<div class="container mx-auto my-8 px-8 lg:px-16">
		<div class="text-start">
			<h1 class="text-4xl font-bold mt-16 mb-4">Meilleures ventes</h1>
			<h2 class="text-sm text-gray-700 mb-12">Commandez pour vous ou vos proches.</h2>
		</div>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			 {% for produit in produits|slice(0, 12) %}
                <div class="w-[255px] max-h rounded overflow-hidden shadow-lg mx-auto">
                    <a href="{{ path('app_produit_details', { 'slug': produit.slug }) }}">
                        <img class="w-full h-36 object-cover" src="{{ asset('/img/' ~ produit.img) }}" alt="Produit">
                        <div class="px-6 py-4">
                            <div class="font-bold text-start text-l mb-2">{{ produit.nom }}</div>
                            <p class="text-secondary text-end text-base">{{ produit.prix }}
                                €</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
		</div>
	</div>

	{# Meilleurs ventes alimentaires #}
	<div class="container mx-auto my-8 px-8 lg:px-16 mb-16 mt-16">
		<div class="text-end">
			<h1 class="text-4xl font-bold mb-4">Meilleures ventes alimentaires</h1>
			<h2 class="text-sm text-gray-700 mb-8">Offrez de nouvelles saveurs à vos papilles.</h2>
		</div>
		
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for produit in produits|slice(0, 12) %}
                <div class="w-[255px] max-h rounded overflow-hidden shadow-lg mx-auto">
					<a href="{{ path('app_produit_details', { 'slug': produit.slug }) }}">
                    <img class="w-full h-36 object-cover" src="{{ asset('/img/' ~ produit.img) }}" alt="Produit">
                    <div class="px-6 py-4">
                        <div class="font-bold text-start text-l mb-2">{{ produit.nom }}</div>
                        <p class="text-secondary text-end text-base">{{ produit.prix }} €</p>
                    </div>
					</a>
                </div>
            {% endfor %}
        </div>
	</div>

	{# Infos Boutique #}
	<div class="w-full bg-[#F7F8FA] py-16">
		<div class="container mx-auto flex flex-col lg:flex-row items-center justify-between px-8 lg:px-16">
			<div class="max-w-lg lg:max-w-none lg:w-1/2">
				<h1 class="text-4xl font-bold mb-8 max-w-[310px] leading-tight">Unir les boutiques d’ile-de-France sur une seule plateforme</h1>
				<h2 class="text-sm text-secondary mb-8">Et facilitez votre expérience client.</h2>
				<p class="text-gray-700 max-w-[310px] leading-normal">
					C'est ce que s'engage à faire Doko Desu Store : découvrez une nouvelle façon de faire du shopping avec notre plateforme qui rassemble toutes vos boutiques physiques préférées en un seul endroit pratique, </p>
				<p class="text-gray-700 font-semibold mb-8 max-w-[310px] leading-normal">et vous offre ainsi un large éventail de produits.</p>
				<a href="{{ path('app_produit_all') }}" class="btn py-2 px-4 mb-6 rounded bg-[#F7F8FA] text-gray-700 border border-gray-700 hover:bg-gray-700 hover:text-white">
					Tout les produits
				</a>
			</div>

			<div class="flex justify-center lg:w-1/2">
				<img src="/img/infosHome.jpeg" alt="Illustration" class="w-[375px] h-[560px] object-cover">
			</div>
		</div>
	</div>

	{# Catégories boutique #}
	<div class="w-full bg-vert py-16">
		<div class="text-center mb-8">
			<h1 class="text-4xl font-bold mb-4 mt-8">Catégories de boutique</h1>
			<h2 class="text-sm text-gray-700 mb-8">Des boutiques pour tous les goûts.</h2>
		</div>
		<section class="mb-12">
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				{% for categorie in categoriesB|slice(0, 3) %}
					<div class="w-[350px] max-h rounded overflow-hidden shadow-lg mx-auto bg-white">
						{% if categorie.img %}
							<img class="w-full h-36 object-cover" src="{{ asset('/img/' ~ categorie.img) }}" alt="{{ categorie.nom }}">
						{% else %}
							<img class="w-full h-36 object-cover" src="{{ asset('default_image_path') }}" alt="Default Image">
						{% endif %}
						<div class="px-6 py-4">
							<div class="font-bold text-center text-l mb-2">{{ categorie.nom }}</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</section>
		<div class="flex justify-center items-center">
			<a href="{{ path('app_boutique_all') }}" class="btn py-2 px-4 mb-6 rounded bg-vert text-black border border-black hover:bg-black hover:text-white">
				Tout voir
			</a>
		</div>
	</div>
{% endblock %}
