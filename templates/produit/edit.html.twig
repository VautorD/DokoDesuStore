{% extends 'base.html.twig' %}

{% block title %}Edit Produit{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
		<div class="bg-white shadow overflow-hidden sm:rounded-lg">
			<div class="px-4 py-5 sm:px-6">
				<h1 class="text-2xl font-semibold text-gray-800">Modifier le produit
				</h1>
			</div>

    {{ include('produit/_form.html.twig', {'button_label': 'Modifier'}) }}

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a href="{{ path('app_boutique_index') }}" class="inline-block text-sm ml-4 mb-4 px-4 py-2 leading-none border rounded-lg text-primary border-primary hover:border-transparent hover:text-white hover:bg-primary mt-4 lg:mt-0">Retourner à la liste</a>
    {% elseif is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_produit_boutique') }}" class="inline-block text-sm ml-4 mb-4 px-4 py-2 leading-none border rounded-lg text-primary border-primary hover:border-transparent hover:text-white hover:bg-primary mt-4 lg:mt-0">Retourner à ma boutique</a>
    {% endif %}
	</div>
	</div>
    <div class="ml-4 my-4">
    {{ include('produit/_delete_form.html.twig') }}
    </div>
{% endblock %}
