{% extends 'base.html.twig' %}

{% block title %}Vos produits{% endblock %}

{% block body %}
    <div class="flex flex-col md:flex-row">
        <aside class="w-full md:w-72 bg-gray-100 p-4">
            {% include "_partieProfessionnel/_professionnelbarre.html.twig" %}
        </aside>

        <main class="flex-1 border border-gray-200 bg-white p-4">
            <h1 class="text-2xl font-bold mb-4">{{ boutique.nom }} - Vos produits </h1>

            <div class="overflow-x-auto">
                <table class="min-w-full table-auto">
                    <thead>
                        <tr class="bg-gray-200 text-gray-600">
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <th class="py-2 px-4 text-center">Id</th>
                            {% endif %}
                            <th class="py-2 px-4 text-center">Nom</th>
                            <th class="py-2 px-4 text-center">Prix</th>
                            <th class="py-2 px-4 text-center">Marque</th>
                            <th class="py-2 px-4 text-center">Description</th>
                            <th class="py-2 px-4 text-center">Image</th>
                            <th class="py-2 px-4 text-center">Catégorie</th>
                            <th class="py-2 px-4 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for produit in produits %}
                            <tr class="border-b border-gray-200">
                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                    <td class="py-2 px-4 text-center">{{ produit.id }}</td>
                                {% endif %}
                                <td class="py-2 px-4">{{ produit.nom }}</td>
                                <td class="py-2 px-4">{{ produit.prix }}</td>
                                <td class="py-2 px-4">{{ produit.marque }}</td>
                                <td class="py-2 px-4">{{ produit.description }}</td>
                                <td class="py-2 px-4 text-center">
                                    <img src="{{ asset('img/' ~ produit.img) }}" alt="{{ produit.nom }}" class="mx-auto h-12 w-12 object-cover rounded-full">
                                </td>
                                <td class="py-2 px-4 text-center">{{ produit.categorieP.nom }}</td>
                                <td class="py-2 px-4 text-center">
                                    <a href="{{ path('app_produit_details', {'slug': produit.slug}) }}" class="text-blue-500 hover:text-blue-600 mr-2">Voir</a>
                                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="text-blue-500 hover:text-blue-600 mr-2">Modifier</a>
                                    <form method="post" action="{{ path('app_produit_delete', {'id': produit.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                        <button type="submit" class="text-red-500 hover:text-red-600">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="py-4 text-center">Aucun produit trouvé.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </main>
    </div>
{% endblock %}
