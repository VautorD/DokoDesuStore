{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}

    <div class="container mx-auto">
        <div class="flex flex-col md:flex-row">
            <aside class="w-72 bg-gray-100 p-4">
                {% include "_partieMoncompte/_moncomptebarre.html.twig" %}
            </aside>
            <main class="px-5 py-16 w-full">
                <section class="flex flex-col items-center">
                    <h1 class="text-h6 mb-7 font-semibold text-primary-Text text-center">Mon Compte</h1>
                    <p class="text-primary-Text font-medium mb-10">Vos informations personnelles ici.</p>
                    <form class="col-sm-12 col-md-8 col-lg-6">
                        <div class="mb-4">
                            <p class="text-primary-Text font-regular">Email : {{ user.email }}</p>
                        </div>
                        <div class="mb-4">
                            <p class="text-primary-Text font-regular">Nom : {{ user.nom }}</p>
                        </div>
                        <div class="mb-4">
                            <p class="text-primary-Text font-regular">Prénom : {{ user.prenom }}</p>
                        </div>
                        <div class="mb-4">
                            <p class="text-primary-Text font-regular">Téléphone : {{ user.tel }}</p>
                        </div>
                    </form>
                </section>
            </main>
        </div>
    </div>
{% endblock %}
